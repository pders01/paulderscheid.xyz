---
export interface Props {
    href: string;
    title: string;
    projectTitle: string;
    description: string;
}

const { href, title, projectTitle, description } = Astro.props;
---

<li class="project-item">
    <div class="project-card">
        <a href={href} aria-label={title} class="project-title-link">
            {projectTitle}
        </a>
        {
            description && (
                <>
                    <div class="project-separator" />
                    <p class="project-description" set:html={description} />
                </>
            )
        }
    </div>
</li>

<style>
    .project-item {
        list-style-type: none;
        border: 1px solid var(--pico-card-border-color);
        border-radius: calc(var(--pico-border-radius) * 2);
    }

    .project-item:last-child {
        border-bottom: 1px solid var(--pico-card-border-color);
    }

    .project-card {
        background: var(--pico-background-color);
        transition: background-color 0.2s ease;
        border-radius: calc(var(--pico-border-radius) * 2);
    }

    .project-card:hover {
        background: var(--pico-card-sectioning-background-color);
    }

    .project-title-link {
        display: block;
        padding: calc(var(--pd-xyz-spacing) * 0.5);
        color: var(--pico-primary-color);
        text-decoration: none;
        font-weight: 600;
        font-size: var(--pd-xyz-font-size-md);
        transition: color 0.2s ease;
    }

    .project-title-link:hover {
        color: var(--pico-primary-hover);
    }

    .project-separator {
        height: 1px;
        background: var(--pico-card-border-color);
        width: 100%;
    }

    .project-description {
        margin: 0;
        padding: calc(var(--pd-xyz-spacing) * 0.5);
        font-size: var(--pd-xyz-font-size-sm);
        color: var(--pico-muted-color);
        line-height: 1.5;
    }

    .project-description a {
        color: var(--pico-primary-color);
        text-decoration: underline;
    }

    .project-description a:hover {
        color: var(--pico-primary-hover);
    }

    @media (max-width: 700px) {
        .project-title-link {
            padding: calc(var(--pd-xyz-spacing) * 0.75);
            font-size: var(--pd-xyz-font-size-lg);
        }

        .project-description {
            padding: calc(var(--pd-xyz-spacing) * 0.75);
            font-size: var(--pd-xyz-font-size-md);
        }
    }
</style>
