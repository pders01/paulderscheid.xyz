---
export interface Props {
    id: string;
    position?: 'left' | 'center' | 'right';
}

const { id, position = 'center' } = Astro.props;
---

<ul
    class="project-list rounded-md border border-neutral-200 dark:border-neutral-800 shadow-lg p-2 bg-white dark:bg-neutral-900 w-72"
    id={id}
    data-position={position}
>
    <slot />
</ul>

<style>
    .project-list {
        display: none;
        position: absolute;
        top: 100%;
        margin: 0;
        list-style: none;
        z-index: 100;
        opacity: 0;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .project-list[data-position='left'] {
        left: 0;
        transform: translateY(-10px);
    }

    .project-list[data-position='center'] {
        left: 50%;
        transform: translateX(-50%) translateY(-10px);
    }

    .project-list[data-position='right'] {
        right: 0;
        transform: translateY(-10px);
    }

    .project-list li {
        list-style-type: none;
    }

    .project-list.expanded {
        display: block;
        opacity: 1;
    }

    .project-list[data-position='left'].expanded {
        transform: translateY(0);
    }

    .project-list[data-position='center'].expanded {
        transform: translateX(-50%) translateY(0);
    }

    .project-list[data-position='right'].expanded {
        transform: translateY(0);
    }

    @media (max-width: 700px) {
        .project-list {
            position: static;
            box-shadow: none;
            margin: 0.5rem auto 0;
            opacity: 1;
            transform: none;
            width: 100%;
        }
        .project-list.expanded {
            display: block;
        }
    }
</style>
