---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <script>
            const darkModeQuery = window.matchMedia(
                '(prefers-color-scheme: dark)'
            );
            const documentElement = document.documentElement;

            function handleColorSchemeChange(
                e: MediaQueryList | MediaQueryListEvent
            ) {
                const matches = (e as MediaQueryListEvent).matches;
                if (matches) {
                    documentElement.classList.add('dark');
                } else {
                    documentElement.classList.remove('dark');
                }
            }

            darkModeQuery.addEventListener('change', handleColorSchemeChange);

            handleColorSchemeChange(darkModeQuery);
        </script>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="Explore the world of technology and personal development through my dev-blog and portfolio site.
               Stay up-to-date with my latest projects, thoughts, and experiences in coding, design, and self-improvement."
        />
        <title>{title}</title>
    </head>
    <body class="max-w-3xl mx-auto">
        <Nav />
        <main class="container mx-auto px-4">
            <slot />
        </main>
        <Footer />
    </body>
</html>

<style is:global>
    main {
        min-height: 100vh;
    }

    img[src$='.svg'] {
        filter: none;
    }

    @media (prefers-color-scheme: dark) {
        img[src$='.svg'] {
            filter: invert(100%);
        }
    }
</style>
