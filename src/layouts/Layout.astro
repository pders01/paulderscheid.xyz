---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
    title: string;
    narrow?: boolean;
}

const { title, narrow } = Astro.props;

const home = '~/paulderscheid.xyz';
const navLinks = [
    { href: '/about', text: '/about' },
    { href: '/blog', text: '/blog' },
    { href: 'mailto:me@paulderscheid.xyz', text: '/mail' },
];

const gap = 1; // CSS: nav a { margin-right: 1ch }
const navWidth = home.length + navLinks.reduce((acc, l) => acc + gap + l.text.length, 0) + gap;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <meta name="description" content="Paul Derscheid â€” Software Engineer, Koha contributor." />
        <title>{title}</title>
    </head>
    <body>
        {narrow && <Fragment set:html={`<style>:root{--content-width:${navWidth}ch}</style>`} />}
        <Nav home={home} links={navLinks} />
        <hr />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
