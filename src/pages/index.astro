</Layout>

<style>
    :root {
        --pd-xyz-spacing: 2rem;

        --pd-xyz-gap-sm: calc(var(--pd-xyz-spacing) * 0.35);
        --pd-xyz-gap-md: calc(var(--pd-xyz-spacing) * 0.5);
        --pd-xyz-gap-lg: calc(var(--pd-xyz-spacing) * 0.6);

        --pd-xyz-font-size-sm: calc(var(--pico-font-size) * 0.8);
        --pd-xyz-font-size-md: var(--pico-font-size);
        --pd-xyz-font-size-lg: calc(var(--pico-font-size) * 1.2);
    }
    .hero {
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        gap: var(--pd-xyz-spacing);
        margin-bottom: var(--pd-xyz-spacing);
        max-width: calc(var(--pd-xyz-spacing) * 18);
        margin-left: auto;
        margin-right: auto;
    }
    .profile-card,
    .links-card {
        background: var(--pico-card-background-color);
        border-radius: var(--pico-border-radius);
        box-shadow: var(--pico-card-box-shadow);
        padding: var(--pd-xyz-spacing);
        display: flex;
        flex-direction: row;
        align-items: center;
        width: 100%;
    }
    .profile-card {
        gap: var(--pd-xyz-spacing);
        margin-bottom: 0;
    }
    .links-card {
        margin-top: 0;
        justify-content: center;
    }
    .hero-image {
        flex: 0 0 calc(var(--pd-xyz-spacing) * 7.5);
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .profile-img {
        border-radius: var(--pico-border-radius);
        max-width: 100%;
        height: auto;
        box-shadow: var(--pico-box-shadow);
    }
    .hero-content {
        flex: 1 1 calc(var(--pd-xyz-spacing) * 12);
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        gap: var(--pd-xyz-gap-lg);
    }
    .hero-content h1,
    .hero-content h2,
    .hero-content p {
        margin: 0;
    }
    .subtitle {
        font-size: var(--pd-xyz-font-size-lg);
        font-weight: 400;
    }
    .about {
        color: var(--pico-muted-color);
    }
    .social-links {
        display: flex;
        flex-direction: column;
        gap: var(--pd-xyz-gap-md);
        padding: 0;
        margin: 0;
        width: 100%;
    }
    .social-links li {
        list-style-type: none;
    }
    .social-link {
        display: flex;
        align-items: center;
        gap: var(--pd-xyz-gap-sm);
        padding: calc(var(--pd-xyz-spacing) * 0.35)
            calc(var(--pd-xyz-spacing) * 0.5);
        border-radius: var(--pico-border-radius);
        background: var(--pico-card-sectioning-background-color);
        box-shadow: var(--pico-box-shadow);
        text-decoration: none;
        color: var(--pico-color);
        font-weight: 500;
    }
    .social-link:hover,
    .social-link:focus {
        background: var(--pico-primary-hover-background);
        box-shadow: var(--pico-box-shadow);
        color: var(--pico-primary-hover);
    }
    .social-link:hover span,
    .social-link:focus span {
        color: var(--pico-contrast-inverse);
    }
    .social-link:hover img,
    .social-link:focus img {
        filter: brightness(0) invert(1);
    }

    .icon-sm {
        height: calc(var(--pd-xyz-spacing) * 0.75);
    }
    @media (prefers-color-scheme: dark) {
        .social-link:hover span,
        .social-link:focus span {
            color: var(--pico-contrast-hover);
        }
    }

    @media (max-width: 700px) {
        .hero {
            flex-direction: column;
            align-items: center;
            padding: 1.5rem 0.5rem;
            min-width: 0;
            gap: var(--pd-xyz-gap-lg);
        }
        .hero-content {
            flex: 1 1 0;
        }
        .profile-card,
        .links-card {
            flex-direction: column;
            align-items: center;
            width: 100%;
            min-width: 0;
            padding: 1.5rem 1rem;
            margin: 0;
        }
        .profile-card {
            margin-bottom: calc(var(--pd-xyz-spacing) * 0.25);
        }
        .links-card {
            margin-top: calc(var(--pd-xyz-spacing) * 0.25);
        }
        .hero-image {
            width: 100%;
            margin-bottom: calc(var(--pd-xyz-spacing) * 0.6);
        }
        .hero-content {
            min-width: 0;
            width: 100%;
            align-items: center;
            text-align: center;
            gap: var(--pd-xyz-gap-md);
        }
        .social-links {
            width: 100%;
            gap: var(--pd-xyz-gap-sm);
        }
        .social-link {
            justify-content: center;
            width: 100%;
            font-size: var(--pd-xyz-font-size-md);
            padding: calc(var(--pd-xyz-spacing) * 0.45)
                calc(var(--pd-xyz-spacing) * 0.25);
        }
    }
</style>
