---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import SpotlightButton from '../components/SpotlightButton.astro';
import ProjectList from '../components/ProjectList.astro';
import ProjectItem from '../components/ProjectItem.astro';
---

<Layout title="Hi, I'm Paul">
    <section class="hero max-w-3xl mx-auto">
        <div class="profile-card card p-8">
            <div class="hero-image">
                <Image
                    src="/profile.webp"
                    alt="A handsome young engineer with a lovely smirk."
                    width="240"
                    height="240"
                    loading={'eager'}
                    class="profile-img"
                />
            </div>
            <div class="hero-content">
                <h1>ðŸ‘‹ Hi, I'm Paul</h1>
                <h2 class="subtitle">
                    Software engineer by <a
                        href="https://www.linkedin.com/in/paulderscheid-1726504/"
                        >profession</a
                    >, librarian by <a
                        href="https://www.linkedin.com/in/paulderscheid-1726504/"
                        >education</a
                    >
                </h2>
                <p class="about">
                    Currently working on the coolest ILS under the sun: <a
                        href="https://koha-community.org">Koha</a
                    >. ðŸ«€ Everything technology.
                </p>
            </div>
        </div>
        <div class="links-card card p-8">
            <ul class="social-links">
                <li class="github-account">
                    <div class="github-main-container">
                        <a
                            href="https://github.com/pders01"
                            aria-label="GitHub main"
                            class="social-link github-main"
                        >
                            <img
                                src="/svg/github.svg"
                                alt="GitHub"
                                class="icon-sm"
                            />
                            <span>GitHub (main)</span>
                        </a>
                        <SpotlightButton projectListId="project-list">
                            <ProjectList id="project-list" position="right">
                                <ProjectItem
                                    href="https://github.com/pders01/sp"
                                    title="sp - scratchpad"
                                    projectTitle="sp"
                                    description="Daily scratchpad for emptying your (and my) mind. Can also be your <a href='https://mikebabb.com/blog/engineering-daybooks/'>engineering daybook</a>."
                                />
                                <ProjectItem
                                    href="https://github.com/pders01/md"
                                    title="md - markdown server"
                                    projectTitle="md"
                                    description="A simple CLI tool that serves markdown files as HTML with beautiful Tailwind CSS styling and automatic dark/light theme support."
                                />
                            </ProjectList>
                        </SpotlightButton>
                    </div>
                </li>
                <li>
                    <a
                        href="https://github.com/LMSCloudPaulD"
                        aria-label="GitHub work"
                        class="social-link"
                    >
                        <img
                            src="/svg/github.svg"
                            alt="GitHub"
                            class="icon-sm"
                        />
                        <span>GitHub (work)</span>
                    </a>
                </li>
                <li>
                    <a
                        href="https://koha-community.org"
                        aria-label="Koha"
                        class="social-link"
                    >
                        <img src="/svg/koha.svg" alt="Koha" class="icon-sm" />
                        <span>Koha</span>
                    </a>
                </li>
                <li>
                    <a
                        href="https://chat.koha-community.org"
                        aria-label="Mattermost"
                        class="social-link"
                    >
                        <img
                            src="/svg/mattermost.svg"
                            alt="Mattermost"
                            class="icon-sm"
                        />
                        <span>Mattermost @paulderscheid</span>
                    </a>
                </li>
            </ul>
        </div>
    </section>
</Layout>

<style>
    :root {
        --pd-xyz-spacing: 2rem;

        --pd-xyz-gap-sm: calc(var(--pd-xyz-spacing) * 0.35);
        --pd-xyz-gap-md: calc(var(--pd-xyz-spacing) * 0.5);
        --pd-xyz-gap-lg: calc(var(--pd-xyz-spacing) * 0.6);

        --pd-xyz-font-size-sm: 0.875rem;
        --pd-xyz-font-size-md: 1rem;
        --pd-xyz-font-size-lg: 1.25rem;

        --pd-xyz-spotlight-gradient: linear-gradient(
            90deg,
            crimson,
            var(--brand)
        );
        --pd-xyz-spotlight-gradient-hover: linear-gradient(
            135deg,
            crimson,
            var(--brand)
        );
        --pd-xyz-spotlight-color: white;
        --pd-xyz-spotlight-border-width: calc(var(--pd-xyz-spacing) * 0.05);

        --pd-xyz-background-color: hsl(210, 10%, 98%);
        --pd-xyz-text-color: hsl(210, 10%, 10%);
        --pd-xyz-text-color-secondary: hsl(210, 0%, 50%);

        --pd-xyz-transform-y-default: translateY(-2px);
        @media (prefers-color-scheme: dark) {
            --pd-xyz-background-color: hsl(210, 10%, 10%);
            --pd-xyz-text-color: hsl(210, 10%, 98%);
        }
    }
    .hero {
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        gap: var(--pd-xyz-spacing);
        margin-bottom: var(--pd-xyz-spacing);
        margin-left: auto;
        margin-right: auto;
    }
    .profile-card,
    .links-card {
        border-radius: 0.75rem;
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1),
            0 1px 2px -1px rgba(0, 0, 0, 0.1);
        padding: var(--pd-xyz-spacing);
        display: flex;
        flex-direction: row;
        align-items: center;
        width: 100%;
    }
    .profile-card {
        gap: var(--pd-xyz-spacing);
        margin-bottom: 0;
    }
    .links-card {
        margin-top: 0;
        justify-content: center;
    }
    .hero-image {
        flex: 0 0 calc(var(--pd-xyz-spacing) * 7.5);
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .profile-img {
        border-radius: 0.75rem;
        max-width: 100%;
        height: auto;
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    }
    .hero-content {
        flex: 1 1 calc(var(--pd-xyz-spacing) * 12);
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        gap: var(--pd-xyz-gap-lg);
    }
    .hero-content h1,
    .hero-content h2,
    .hero-content p {
        margin: 0;
    }
    .subtitle {
        font-size: var(--pd-xyz-font-size-lg);
        font-weight: 400;
    }
    .about {
        color: rgb(107 114 128);
    }
    .social-links {
        display: flex;
        flex-direction: column;
        gap: var(--pd-xyz-gap-md);
        padding: 0;
        margin: 0;
        width: 100%;
    }
    .social-links li {
        list-style-type: none;
    }
    .social-link {
        display: flex;
        align-items: center;
        gap: var(--pd-xyz-gap-sm);
        padding: calc(var(--pd-xyz-spacing) * 0.35)
            calc(var(--pd-xyz-spacing) * 0.5);
        border-radius: 0.75rem;
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        text-decoration: none;
        font-weight: 500;
    }

    .icon-sm {
        height: calc(var(--pd-xyz-spacing) * 0.75);
    }

    /* GitHub Account with Projects */
    .github-account {
        position: relative;
    }

    .github-main-container {
        display: flex;
        align-items: center;
        gap: var(--pd-xyz-gap-sm);
    }

    .github-main {
        flex: 3;
        position: relative;
        z-index: 2;
    }

    .social-link:hover {
        transform: var(--pd-xyz-transform-y-default);
        background-color: var(--pd-xyz-background-color);
        color: var(--pd-xyz-text-color);
    }

    @media (prefers-color-scheme: dark) {
        .social-link:hover span,
        .social-link:focus span {
            background-color: var(--pd-xyz-background-color);
            color: var(--pd-xyz-text-color);
        }
    }

    @media (max-width: 700px) {
        .hero {
            flex-direction: column;
            align-items: center;
            padding: 1.5rem 0.5rem;
            min-width: 0;
            gap: var(--pd-xyz-gap-lg);
        }
        .hero-content {
            flex: 1 1 0;
        }
        .profile-card,
        .links-card {
            flex-direction: column;
            align-items: center;
            width: 100%;
            min-width: 0;
            padding: 1.5rem 1rem;
            margin: 0;
        }
        .profile-card {
            margin-bottom: calc(var(--pd-xyz-spacing) * 0.25);
        }
        .links-card {
            margin-top: calc(var(--pd-xyz-spacing) * 0.25);
        }
        .hero-image {
            width: 100%;
            margin-bottom: calc(var(--pd-xyz-spacing) * 0.6);
        }
        .hero-content {
            min-width: 0;
            width: 100%;
            align-items: center;
            text-align: center;
            gap: var(--pd-xyz-gap-md);
        }
        .social-links {
            width: 100%;
            gap: var(--pd-xyz-gap-sm);
        }
        .social-link {
            justify-content: center;
            width: 100%;
            font-size: var(--pd-xyz-font-size-md);
            padding: calc(var(--pd-xyz-spacing) * 0.45)
                calc(var(--pd-xyz-spacing) * 0.25);
        }

        .github-account {
            position: static;
        }

        .github-main-container {
            flex-direction: column;
            gap: calc(var(--pd-xyz-spacing) * 0.25);
            width: 100%;
        }

        .github-main {
            width: 100%;
        }
    }
</style>
