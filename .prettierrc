{
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "es5",
    "printWidth": 125,
    "plugins": ["prettier-plugin-astro"],
    "overrides": [
        {
            "files": "*.astro",
            "options": {
                "parser": "astro"
            }
        },
        {
            "files": "*.mdx",
            "options": {
                "parser": "mdx",
                "proseWrap": "always",
                "printWidth": 100
            }
        }
    ]
}
